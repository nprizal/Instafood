<div class="wrapper wrapper-small">
  <div class="frame form center-block text-center">
    <h3 class="header brand">Instafood</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field email">
        <%= f.email_field :email, require: true, autofocus: true, placeholder: 'メールアドレス' %>
      </div>

      <div class="field username">
        <%= f.text_field :user_name, require: true, placeholder: 'ユーザーネーム' %>
      </div>

      <div class="field password">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'パスワード' %>
      </div>

      <div class="field password-confirm">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'パスワード（確認）'  %>
      </div>

      <div class="field sign-up">
        <%= f.submit "登録する", class: 'btn btn-color' %>
      </div>
    <% end %>
  </div>
  <div class="frame form sub text-center">
    アカウントをお持ちですか？<%= link_to "ログイン", new_user_session_path %>
  </div>
</div>
